            </div>
            <div class="form-group">
                <label class="control-label">Acceptance</label>
                <select asp-for="AcceptlistId" class="form-control" asp-items="ViewBag.AcceptlistId"></select>
                <span asp-validation-for="AcceptlistId" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="HomeId" class="control-label"></label>
                <select asp-for="HomeId" class="form-control" asp-items="ViewBag.HomeId"></select>
                <span asp-validation-for="HomeId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
