<body>
<div class="super_container">
	<!-- Header -->
	<header class="header">
		<div class="header_content d-flex flex-row align-items-center justify-content-start">
			<div class="logo"><a href="#" style="width:130px;font-size:21px">Hall Boking</a></div>
			<div class="ml-auto d-flex flex-row align-items-center justify-content-start">
				<nav class="main_nav">
					<ul class="d-flex flex-row align-items-start justify-content-start">
					   <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
					   <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>

					   @if (name!=null)
					   {
							  <li><a style="text-decoration:none" asp-controller="LoginAndRegestration" asp-action="Logout">Logout</a></li>
							  <li><a style="text-decoration:none;color:white">Hello,@name</a></li>
							  <li><a style="text-decoration:none" asp-controller="DashBoard" asp-action="Customer">My Profil</a></li>
					   }
					   else
					   {  
							   <li><a style="text-decoration:none" asp-controller="LoginAndRegestration" asp-action="Login">Sign In</a></li>
							   <li><a style="text-decoration:none" asp-controller="LoginAndRegestration" asp-action="Register">Sign Up</a></li>
					   }
					</ul>
				</nav>
			</div>
		</div>
	</header>
	<!-- Home -->
	<div class="home">
		<div class="home_slider_container">
			<div class="owl-carousel owl-theme home_slider">
				<!-- Slide -->
				<div class="slide">
					<div class="background_image" style="background-image: url(../Assests/images/milestones.jpg)"></div>
					<div class="home_container">
						<div class="container">
							<div class="row">
								<div class="col">
									<div class="home_content text-center">
										<div class="home_title">A Luxury Stay</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="page-wrapper bg-img-1 p-t-165 p-b-100">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab3">
                            <form  asp-action="Create">
								<div class="input-group">
										@if(ViewBag.accept != null)
										{
											<h4 style="color:blue">@ViewBag.accept</h4>
										}
								</div>
                                <div hidden="hidden" class="input-group">
										<label class="label">User Name:</label>
                                    <input class="input--style-1" type="text" value="@name">
                                </div>
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <label asp-for="DateIn"  for="DateIn" class="form__label">Date IN:</label>
                                            <input asp-for="DateIn" type="date" class="form__input"  id="DateIn" placeholder="mm/dd/yyyy" required/>
										</div>
										
												@if (ViewBag.error!=null)
												{
													 <p style="color:red">@ViewBag.error</p>
												}
                                    </div>
                                </div>
                                    <label  class="input--style-1">Visa ID:</label>
                                    <select asp-for="VisaId" class="form__input" asp-items="ViewBag.VisaId" required></select>
									   <br />
									    @if (ViewBag.NoMoney!=null)
										{
										  <p style="color:red">@ViewBag.NoMoney</p>
										}
							    <div class="form-btn" style="width: 40%;">
								    <a asp-action="Create" asp-controller="Visas" class="submit-btn" style="width: 80px;height: 40px;padding-top: 10px;background-color: #ffa37b;color: white"><center>Add Visa</center></a>
							       <input type="submit" value="Reserve" class="btn-submit" style="background-color: #ffa37b;color: white"/>
								</div>
								<br /><br />
								  <div class="form-btn" style="width: 40%;">
								    <a asp-action="Create" asp-controller="Reviews" class="submit-btn" style="width: 80px;height: 40px;padding-top: 10px;background-color: #ffa37b;color: white"><center>Add Review</center></a>
							    </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

	<div style="border-radius: 24px; box-shadow: 8px 8px 50px #000; background-color: #0000; backdrop-filter: blur(5px);width: 1030px;margin-left: 140px;">
        <div  class="slide-container swiper">
            <div class="slide-content">
                <div class="card-wrapper swiper-wrapper">
					 @foreach (var item in @ViewBag.Reviews)
					 {
						<div class="card swiper-slide">
							<div class="image-content">
								<span class="overlay" style="background-color: #3e6f80;"></span>
								<div class="card-image">
									<img src=@Url.Content("~/Images/"+@item.Customers.UserImage) alt="" class="card-img">
								</div>
							</div>
							<div class="card-content">
								<h2 class="name">@item.Customers.UserName</h2>
								<p class="description" style="height:100px">@item.Opinion</p>

							</div>
						</div>
					 } 
                </div>
            </div>

            <div style="color:black" class="swiper-button-next swiper-navBtn"></div>
            <div style="color:black" class="swiper-button-prev swiper-navBtn"></div>
            <div style="color:black" class="swiper-pagination"></div>
        </div>
    </div>

	<!-- Footer -->
	<footer class="footer">
		<div class="footer_content">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="footer_logo_container text-center">
							<div class="footer_logo">
								<a href="#"></a>
								<div>The River</div>
								<div>since 1945</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row footer_row">
					
					<!-- Address -->
					<div class="col-lg-3">
						<div class="footer_title">Our Address</div>
						<div class="footer_list">
							<ul>
								<li>Beach Str. 345</li>
								<li>67559 Miami</li>
								<li>USA</li>
							</ul>
						</div>
					</div>

					<!-- Reservations -->
					<div class="col-lg-3">
						<div class="footer_title">Reservations</div>
						<div class="footer_list">
							<ul>
								<li>Tel: 345 5667 889</li>
								<li>Fax; 6783 4567 889</li>
								<li>reservations@hotelriver.com</li>
							</ul>
						</div>
					</div>

					<!-- Newsletter -->
					<div class="col-lg-3">
						<div class="footer_title">Newsletter</div>
						<div class="newsletter_container">
							<form action="#" class="newsletter_form" id="newsletter_form">
								<input type="email" class="newsletter_input" placeholder="Your email address" required="required">
								<button class="newsletter_button">Subscribe</button>
							</form>
						</div>
					</div>

					<!-- Footer images -->
					<div class="col-lg-3">
						<div class="certificates d-flex flex-row align-items-start justify-content-lg-between justify-content-start flex-lg-nowrap flex-wrap">
							<div class="cert"><img src="~/Assests/images/cert_1.png" alt=""></div>
							<div class="cert"><img src="~/Assests/images/cert_2.png" alt=""></div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="copyright">
