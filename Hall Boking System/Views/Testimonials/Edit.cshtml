@model Hall_Boking_System.Models.Testimonial

@{
    ViewData["Title"] = "Edit";
        Layout = "~/Views/Shared/AdminDashboardLayout.cshtml";
}
<h4>Testimonial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
