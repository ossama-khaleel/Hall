@model IEnumerable<Hall_Boking_System.Models.JoinTable>
@{
    Layout = "~/Views/Shared/AdminDashboardLayout.cshtml";
}

<table class="table">
                        <thead>
                            <tr>
                                <th>First Name </th> 
                                <th>Last Name </th>
                                <th>UserName </th>
                                <th>Password </th>
                                <th>Image </th>
                                <th>Phonenumber </th>
                                <th>Email </th>
                                <th>Role Name </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.customer.FirstName</td>
                                    <td>@item.customer.LastName</td>
                                    <td>@item.customer.UserName</td>
                                    <td>@item.customer.Password</td>
                                    <td><img src=@Url.Content("~/images/"+item.customer.UserImage) width=100 height=100 /></td>
                                    <td>@item.customer.PhoneNumber</td>
                                    <td>@item.customer.Email</td>
                                    <td>@item.role.RoleName</td>
                                    <td>
                       <a asp-action="Edit" asp-controller="UserLogins" asp-route-id="@item.userLogin.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>